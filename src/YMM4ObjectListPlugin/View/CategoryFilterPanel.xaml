<UserControl
  x:Class="ObjectList.View.CategoryFilterPanel"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
  xmlns:core="clr-namespace:ObjectList"
  xmlns:local="clr-namespace:ObjectList.View"
  xmlns:loc="clr-namespace:YukkuriMovieMaker.Resources.Localization;assembly=YukkuriMovieMaker.Plugin"
  xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
  x:Name="root"
  >
  <UserControl.Resources>
    <Style x:Key="DockPanelStyle" TargetType="DockPanel">
      <Setter Property="Margin" Value="0,2" />
      <Setter Property="MinHeight" Value="28" />
      <Setter Property="VerticalAlignment" Value="Center" />
      <Style.Triggers>
        <DataTrigger Binding="{Binding PanelStyle, ElementName=root}" Value="Compact">
          <Setter Property="Margin" Value="0,0" />
          <Setter Property="MinHeight" Value="16" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="LabelStyle" TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
      <Setter Property="VerticalAlignment" Value="Center" />
      <Style.Triggers>
        <DataTrigger Binding="{Binding PanelStyle, ElementName=root}" Value="Compact">
          <Setter Property="FontSize" Value="10" />
          <Setter Property="Margin" Value="1,0,0,0" />
          <Setter Property="Padding" Value="0" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="ToggleStyle" TargetType="c:ToggleSlider">
      <Setter Property="Margin" Value="2" />
      <Style.Triggers>
        <DataTrigger Binding="{Binding PanelStyle, ElementName=root}" Value="Compact">
          <Setter Property="Margin" Value="0" />
          <Setter Property="Height" Value="18" />
          <Setter Property="Padding" Value="0" />
          <Setter Property="MinHeight" Value="0" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="IconWrapperStyle" TargetType="Border">
      <Setter Property="Width" Value="16" />
      <Setter Property="Height" Value="16" />
      <Setter Property="VerticalAlignment" Value="Center" />
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Style.Triggers>
        <DataTrigger Binding="{Binding PanelStyle, ElementName=root}" Value="Compact">
          <Setter Property="Width" Value="14" />
          <Setter Property="Height" Value="14" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="CategoryItemStackPanelStyle" TargetType="StackPanel">
      <Style.Triggers>
        <DataTrigger Binding="{Binding PanelStyle, ElementName=root}" Value="Compact">
          <Setter Property="Margin" Value="0,1"/>
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </UserControl.Resources>
  <StackPanel>
    <StackPanel>
      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterVoiceItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="MessageTextOutline" />
          </Border>
          <Label Content="{x:Static loc:Texts.VoiceItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterTextItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="FormatText" />
          </Border>
          <Label Content="{x:Static loc:Texts.TextItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterVideoItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="Video" />
          </Border>
          <Label Content="{x:Static loc:Texts.VideoItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterAudioItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="Music" />
          </Border>
          <Label Content="{x:Static loc:Texts.AudioItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterImageItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="Image" />
          </Border>
          <Label Content="{x:Static loc:Texts.ImageItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterShapeItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="ShapePlus" />
          </Border>
          <Label Content="{x:Static loc:Texts.ShapeItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterTachieItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="Account" />
          </Border>
          <Label Content="{x:Static loc:Texts.TachieItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterTachieFaceItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="EmoticonOutline" />
          </Border>
          <Label Content="{x:Static loc:Texts.TachieFaceItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterEffectItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="ImageAutoAdjust" />
          </Border>
          <Label Content="{x:Static loc:Texts.EffectItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterTransitionItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="GradientHorizontal" />
          </Border>
          <Label Content="{x:Static loc:Texts.TransitionItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterSceneItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="ChartTimeline" />
          </Border>
          <Label Content="{x:Static loc:Texts.SceneGroupName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterFrameBufferItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="ImageMultiple" />
          </Border>
          <Label Content="{x:Static loc:Texts.FrameBufferItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>

      <DockPanel VerticalAlignment="Center" Style="{StaticResource DockPanelStyle}">
        <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsCategoryFilterGroupItem}" Style="{StaticResource ToggleStyle}" />
        <StackPanel Orientation="Horizontal" Style="{StaticResource CategoryItemStackPanelStyle}">
          <Border Style="{StaticResource IconWrapperStyle}">
            <materialIcons:MaterialIconExt Kind="SelectGroup" />
          </Border>
          <Label Content="{x:Static loc:Texts.GroupItemName}" Style="{StaticResource LabelStyle}" />
        </StackPanel>
      </DockPanel>
    </StackPanel>
  </StackPanel>
</UserControl>

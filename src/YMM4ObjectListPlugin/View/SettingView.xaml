<UserControl
  x:Class="ObjectList.View.SettingView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
  xmlns:core="clr-namespace:ObjectList"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:loc="clr-namespace:YukkuriMovieMaker.Resources.Localization;assembly=YukkuriMovieMaker.Plugin"
  xmlns:local="clr-namespace:ObjectList.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:viewmodels="clr-namespace:ObjectList.ViewModel"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d"
  >
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/IconResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>
  <ScrollViewer
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    HorizontalScrollBarVisibility="Disabled"
    VerticalScrollBarVisibility="Auto"
    >
    <StackPanel>
      <Expander Header="YMM4 オブジェクトリスト プラグイン" IsExpanded="True">
        <Grid Margin="10">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="Plugin version"
            />
          <TextBox
            x:Name="PluginVersion"
            Grid.Row="0"
            Grid.Column="1"
            IsReadOnly="True"
            Text="{Binding PluginVersion, Mode=OneWay}"
            />

          <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="{Binding UpdateMessage}"
            IsEnabled="{Binding HasUpdate}"
            />
          <Button
            x:Name="UpdateCheck"
            Grid.Row="1"
            Grid.Column="1"
            Margin="2"
            Command="{Binding UpdateCheck}"
            Content="Update check"
            IsEnabled="{Binding IsUpdateCheckEnabled}"
            />

          <Button
            x:Name="Download"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="2"
            Command="{Binding Download}"
            Content="Download"
            IsEnabled="{Binding IsDownloadable}"
            />
        </Grid>
      </Expander>


      <!--  options  -->
      <Expander Header="オプション" IsExpanded="True">
        <StackPanel>
          <!--  列ヘッダーオプション  -->
          <GroupBox Name="ColumnHeaderOptions" Margin="5">
            <GroupBox.Header>
              <DockPanel>
                <Label Content="列ヘッダー表示" />
              </DockPanel>
            </GroupBox.Header>

            <StackPanel Margin="5">

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowColumnColor}" />
                <Image
                  Width="14"
                  Margin="2"
                  Source="{StaticResource mdiPaletteOutline}"
                  />
                <Label Content="{x:Static loc:Texts.BaseItemColorName}" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowColumnCategory}" />
                <Image
                  Width="14"
                  Margin="2"
                  Source="{StaticResource mdiSitemap}"
                  />
                <Label Content="カテゴリ" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowColumnLayer}" />
                <Image
                  Width="14"
                  Margin="2"
                  Source="{StaticResource mdiLayers}"
                  />
                <Label Content="{x:Static loc:Texts.BaseItemLayerName}" />
              </DockPanel>

              <DockPanel Margin="0,2"
                Visibility="Collapsed">
                <ComboBox
                  Width="150"
                  DockPanel.Dock="Right"
                  IsEnabled="false"
                  SelectedIndex="0"
                  >
                  <ComboBoxItem>レイヤー番号</ComboBoxItem>
                  <ComboBoxItem>レイヤー名</ComboBoxItem>
                </ComboBox>
                <Image
                  Width="14"
                  Margin="2"
                  IsHitTestVisible="False"
                  Opacity="0"
                  />
                <Label Content="レイヤーの表示種類" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowColumnGroup}" />
                <Image
                  Width="14"
                  Margin="2"
                  Source="{StaticResource mdiGroup}"
                  ToolTip="{x:Static loc:Texts.GroupLabel}"
                  />
                <Label Content="{x:Static loc:Texts.GroupLabel}" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowColumnFrame}" />
                <Image
                  Width="14"
                  Margin="2"
                  Source="{StaticResource mdiTimelineClock}"
                  ToolTip="{x:Static loc:Texts.SearchResultFrameColumnHeader}"
                  />
                <Label Content="{x:Static loc:Texts.BaseItemFrameName}" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowColumnLength}" />
                <Image
                  Width="14"
                  Margin="2"
                  Source="{StaticResource mdiArrowExpandHorizontal}"
                  ToolTip="{x:Static loc:Texts.BaseItemLengthName}"
                  />
                <Label Content="{x:Static loc:Texts.BaseItemLengthName}" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowColumnLock}" />
                <Image
                  Width="14"
                  Margin="2"
                  Source="{StaticResource mdiLock}"
                  ToolTip="{x:Static loc:Texts.BaseItemIsLockedDesc}"
                  />
                <Label Content="{x:Static loc:Texts.BaseItemIsLockedName}" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowColumnHidden}" />
                <Image
                  Width="14"
                  Margin="2"
                  Source="{StaticResource mdiEyeOffOutline}"
                  />
                <Label Content="{x:Static loc:Texts.BaseItemIsHiddenName}" />
              </DockPanel>

            </StackPanel>
          </GroupBox>


          <!--  フッターオプション  -->
          <GroupBox Name="FooterOptions" Margin="5">
            <GroupBox.Header>
              <DockPanel>
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowFooter}" />
                <Label Content="フッター表示" />
              </DockPanel>
            </GroupBox.Header>

            <StackPanel Margin="5" IsEnabled="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowFooter}">

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowFooterSceneName}" />
                <Label Content="シーン名" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowFooterSceneScreenSize}" />
                <Label Content="シーンの画面サイズ" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowFooterSceneFps}" />
                <Label Content="シーンFPS" />
              </DockPanel>

              <DockPanel Margin="0,2">
                <c:ToggleSlider DockPanel.Dock="Right" Value="{Binding Source={x:Static core:ObjectListSettings.Default}, Path=IsShowFooterSceneHz}" />
                <Label Content="シーンの音声サンプリングレート" />
              </DockPanel>

            </StackPanel>
          </GroupBox>


          <Grid Margin="10">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>


          </Grid>
        </StackPanel>
      </Expander>



      <GroupBox
        Margin="10"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Header="YMM4 オブジェクトリスト プラグインについて"
        >
        <StackPanel>
          <TextBlock Margin="5" TextWrapping="Wrap">タイムライン上のアイテムを一覧表示＆選択することのできるプラグインです。</TextBlock>
          <TextBlock Margin="5" TextWrapping="Wrap">【注意】プラグインに公開されていない非公式な処理をしているため、YMM4本体のアップデートで動かなくなる可能性があります。</TextBlock>
          <TextBlock Margin="5" TextWrapping="Wrap">このプラグインが原因のエラーはYMM4本体の開発者ではなく、いぬいぬ（InuInu2022）にご連絡ください。</TextBlock>
          <TextBlock Margin="5">Ⓒ InuInu 2025 -</TextBlock>
          <Button
            x:Name="GoToGithub"
            Command="{Binding OpenGithub}"
            Content="Open Github"
            />
        </StackPanel>
      </GroupBox>


    </StackPanel>
  </ScrollViewer>
</UserControl>
